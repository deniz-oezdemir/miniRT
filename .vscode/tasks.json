{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile miniRT",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "${fileDirname}/init.c",
                "${fileDirname}/cleaning.c",
                "${fileDirname}/parsing/parser.c",
                "${fileDirname}/parsing/ambient_light.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Ilib/mlx_linux",
                "-Llib/mlx",
                "-lmlx",
                "-L${fileDirname}/../lib/libft",
                "-lft",
                "-L${fileDirname}/../lib/mlx_linux",
                "-lX11",
                "-lXext"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "draw.c",
                "transform.c",
                "hooks.c",
                "lst_utils.c",
                "map.c",
                "matrix.c",
                "commands.c",
                "utils.c",
                "color.c",
                "window.c",
                "free.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Ilib/mlx_linux",
                "-lm",
                "-Llib/mlx_linux",
                "-lmlx_Linux",
                "-L${fileDirname}/../lib/libft",
                "-lft",
                "-L${fileDirname}/../lib/mlx_linux",
                "-lX11",
                "-lXext",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
